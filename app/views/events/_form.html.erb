    <%= f.label "Начало в" %><br />
    <%= f.datetime_select :starts_at %>
  </div>
  <div class="field">
    <%= f.label "Конец в" %><br />
    <%= f.datetime_select :ends_at %>
  </div>
    <div class="field">
      <%= f.label "Напомнить в" %><br />
      <%= f.datetime_select :send_at %>
    </div>

  <div class="field">
    <%= f.label "Все дни" %><br />
    <%= f.check_box :all_day %>
  </div>
  <div class="field">
    <%= f.label "Описание" %><br />

    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= fields_for :send_to_users do |user|%>
      <%= user.text_field :user_tokens, {  class: 'token-input-list' } %>
    <%end%>
