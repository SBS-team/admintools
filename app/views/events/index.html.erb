<h1>Список событий</h1>

<table>
  <tr>
    <th>Заголовок</th>
    <th>Начало в</th>
    <th>Конец в</th>
    <th>Все дни</th>
    <th>Описание</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.starts_at %></td>
    <td><%= event.ends_at %></td>
    <td><%= event.all_day %></td>
    <td><%= event.description %></td>
    <td><%= link_to 'Просмотр', event %></td>
    <td><%= link_to 'Редактировать', edit_event_path(event) %></td>

    <td><%= link_to 'Удалить', event, :confirm => 'Вы уверены?', :method => :delete%></td>

  </tr>
<% end %>
</table>


