#SuperModalPopupDiv
  = form_for(@event) do |f|
    - if @event.errors.any?
      #error_explanation.alert.alert-error
        %a.close{"data-dismiss" => "alert", :href => "#"}
          ×
        %h2 Возникли ошибки:
        %ul
          - @event.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label "Заголовок"
      = f.text_field :title
    .field
      = f.label "Начало"
      = f.datetime_select :starts_at
    .field
      = f.label "Конец"
      = f.datetime_select :ends_at
    .field
      = f.label "Напомнить"
      = f.datetime_select :send_at
    %p
      .field
        %div{:style => "float:left;"}
          = f.label "Весь день"
        %div{:style => "float:left;"}
          = f.check_box :all_day
    %p
      .field
        %div{:style => "float:left;"}
          = f.label "Отослано"
        %div
          = f.check_box :sended
    .field{:style => "float:none;"}
      = f.label "Описание"
      = f.text_field :description
    .field
      = f.label "Пользователи"
      = fields_for :send_to_admins do |admin|
        = admin.text_field :admin_tokens, {"value" => "click to show", "data-pre" => @event.admins.map(&:attributes).to_json, id: "token-input-list", class: 'token-input-list' }
    =(render :partial => 'repeat_events') if from_create
    .actions{:align => "right"}
      = f.submit "Save"