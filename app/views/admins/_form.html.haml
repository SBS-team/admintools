= form_for(@admin, :html => {:class => 'well form-horizontal', :multipart => true}) do |a|
  -if @admin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin.errors.count, "error")} prohibited this admin from being saved"
      %ul
        - @admin.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .control-group
      = a.label :email, 'Email', :class => 'control-label'
      .controls
        = a.text_field :email, :class => 'input-xlarge'
    .control-group
      = a.label :name, 'Admin name', :class => 'control-label'
      .controls
        = a.text_field :name, :class => 'input-xlarge'
    .control-group
      = a.label :password, 'password', :class => 'control-label'
      .controls
        = a.password_field :password, :class => 'input-xlarge'
    .control-group
      = a.label :password_confirmation, 'confirmation password', :class => 'control-label'
      .controls
        = a.password_field :password_confirmation, :class => 'input-xlarge'
    .form-actions
      = a.submit (@admin.id?) ? 'Изменить' : 'Создать' , :class => 'btn btn-primary'
      = link_to 'Назад', admins_path, :class => 'btn'