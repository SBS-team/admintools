!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
        %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
          %title= content_for?(:title) ? yield(:title) : "Admintools"
          = csrf_meta_tags
          = yield :calendar
          / Le HTML5 shim, for IE6-8 support of HTML elements
          /[if lt IE 9]
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
          = stylesheet_link_tag "application", :media => "all"

  %body
    .wrapper
      .navbar.navbar-fixed-top
        .navbar-inner
          .container-fluid
            %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{:href => "/"} Team Leader
            .container-fluid.nav-collapse{:style => "float: right"}
              - if user_signed_in?
                / Signed in as
                %strong
                  #{current_user.full_name}
                = link_to "Log out", destroy_user_session_path, :method => :delete, :class => "btn btn-danger"
      .container-fluid
        .row-fluid
          .span9
            %ul.breadcrumb
            %ul.nav.nav-tabs
              %li#users_tab= link_to "Профиль", teamleader_users_path
              %li#poll_tab= link_to "Голосование", teamleader_poll_index_path
              %li#birthday_tab= link_to "Дни рождения", teamleader_birthday_path
              -if can? :manage, Department
                %li#departments_tab= link_to "Отделы", teamleader_departments_path
            = flash_alerts
            = yield
          .span3
            = yield :sidebar
            = user_list
      .push
    %footer.container-fluid
      %p © Company 2012
    = javascript_include_tag "application"