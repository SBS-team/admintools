= form_for(@room, :html => {:class => 'well form-horizontal'}) do |f|
  -if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} какая-то ошибка, не может сохранить:"
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  %fieldset
    .control-group
      = f.label :name, 'Номер офиса', :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'input-xlarge', :placeholder => "Введите номер офиса"
    .control-group
      = f.label :user_id, 'Пользователь', :class => 'control-label'
      .controls
        = select_tag :user_id, options_from_collection_for_select(@users, :id, :full_name, @room.user_id), :prompt => 'Выбрать пользователя', :include_blank => true, :class => 'input-xlarge', :name => "room[user_id]"
  .form-actions
    =f.submit "Назначить", :class => "btn btn-primary"
    = link_to "Назад", root_url, :class => "btn"