= form_for @search, :url => rooms_path, :html => {:method => :get, :class => 'well form-horizontal'} do |f|
  .input-medium.search-query{:type => "text"}
    %p
      = f.label :name_equals, "Введите имя офиса"
      = f.text_field :name_equals
    %p
      = f.label :user_id_equals, "Введите имя пользователя"
      = select_tag :user_id_equals, options_from_collection_for_select(@users, :id, :full_name), :prompt => 'Выбрать пользователя', :include_blank => true, :name => "search[user_id_equals]"
    %button.btn{:type => "submit"} Найти
    = link_to "Сбросить", rooms_path, :class => 'btn btn-inverse'
