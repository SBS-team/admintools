!!!
%html
  %body
    %table
      %tbody
        %tr
          %td
            =@user.first_name
            =@user.last_name
          %td
            Причина:
            = @absent.reason
          -if @absent.date_from.to_date==@absent.date_to.to_date
            %td
              Дата:
              = @absent.date_from.strftime("%d-%m-%Y")
            %td
              C:
              =@absent.date_from.strftime("%H-%M")
            %td
              До:
              = @absent.date_to.strftime("%H-%M")
          -else
            %td
              С:
              = @absent.date_from.strftime("%d-%m-%Y")
            %td(colspan="2" )
              До:
              = @absent.date_to.strftime("%d-%m-%Y")
