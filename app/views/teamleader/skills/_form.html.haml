=form_for([:teamleader, @skill], :html => {:class => 'well form-horizontal', :multipart => true}) do |u|
  -if @skill.errors.any?
    #error_explanation.alert.alert-error
      %a.close{"data-dismiss" => "alert", :href => "#"}
        ×
      %h2 Возникли ошибки:
      %ul
        - @skill.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .control-group
      = u.label :name, 'Название', :class => 'control-label'
      .controls
        = u.text_field :name, :class => 'input-xlarge'
    .form-actions
      -if @deleted!="1"
        = u.submit (@skill.id?) ? 'Изменить' : 'Создать' , :class => 'btn btn-primary'
      - else
        = u.submit 'В список' , :class => 'btn btn-primary'
      = link_to 'Назад', show_list_teamleader_skills_path, :class => 'btn'