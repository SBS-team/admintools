%h1= "Навыки #{@user.full_name}"
%hr
  %table#skills
    - @skills.each do |skill|
      = render(:partial => 'teamleader/skills/skill', :locals => { :@editable => @editable, :skill => skill })

  - if @editable
    %hr
    %h1= "На удаление"
    %table#deleted

    %hr
    = collection_select :skill, :new, @skill_list, :id, :name
    = link_to "+", "#", :class => "add_skill"

  -if !@editable && (@user == current_user)
    = link_to edit_teamleader_skills_path, :class => 'btn' do
      %i.icon-pencil
      Редактировать навыки