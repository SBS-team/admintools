%tr{:class => "#{time_request.approved ? "btn-success" : time_request.approved == false ? "btn-danger" : ""}" }
  %td= time_request.request_date
  %td= time_request.requested_time
  %td= time_request.message

  - unless current_user.is_admin?
    %td= link_to "edit", "#", :onclick => "popupik(600, '#{edit_teamleader_time_request_path(time_request)}')"
    %td= link_to "delete", teamleader_time_request_path(time_request), :method => :delete
  - else
    %td= link_to_unless time_request.approved, "accept", teamleader_time_request_approve_path(time_request)
    %td= link_to "alternative", "#", :onclick => "popupik(600, '#{teamleader_time_request_alternative_path(time_request)}')"
    %td= link_to_unless time_request.approved == false, "decline", teamleader_time_request_decline_path(time_request)
