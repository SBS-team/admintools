    %tr
      %th.names= user.full_name
      - (1..12).each do |month|
        - (1..4).each do |i|
          %td{:class => "#{i == 4 ? "bold" : ""}"}
      - user.vacations.by_year(Date.today.year).each do |date|
        -#- dates << date
        -#.range{:style => "display:inline"}
