%h1
  Изменения #{@user.full_name}
  %small
    = link_to 'профиль', teamleader_user_path(@user), :class => 'btn btn-info btn-mini'
%hr
%table.table.table-striped
  %thead
    %tr
      %th Редактировал
      %th Дата
      %th
  %tbody
    - @user_changes.each do |user|
      %tr
        %td= editor_name(user.editor)
        %td= user.created_at.to_s(:db)
        %td
          = render :partial => 'changes', :locals => { :changes => user }
          = link_to "#changesModal#{user.id}", :'data-toggle' => :modal, :class => 'btn btn-inverse' do
            %i{:class => "icon-search"}
            Просмотр

= will_paginate @user_changes, :class=>"pagination pagination-centered"